<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:layout_below="@+id/login_text"
            android:layout_marginTop="28dp"
            android:layout_marginStart="32dp"/>

        <EditText
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/username_label"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_background1"
            android:hint="Type your Username here"
            android:textSize="18sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            android:textColor="#FFFF"
            android:textStyle="bold"
            android:layout_below="@+id/username_field"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"/>


        <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/password_label"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_background1"
            android:hint="Type your Password here"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#333333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="14sp"
            android:textColor="#FFFF"
            android:layout_below="@+id/password_field"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_below="@+id/password_field"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"

            />

        <TextView
            android:id="@+id/or_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="30dp"
            android:textColor="#FFFF"
            android:layout_below="@+id/login_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"/>

        <ImageButton
            android:id="@+id/google_login_button"
            android:layout_width="320dp"
            android:layout_height="56dp"
            android:src="@drawable/google_logo"
            android:background="@android:color/transparent"
            android:layout_below="@+id/or_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/doctor_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue as a Doctor"
            android:textSize="16sp"
            android:textColor="#8e44ad"
            android:background="@android:color/transparent"
            android:layout_below="@+id/google_login_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>